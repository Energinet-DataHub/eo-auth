        {
            "label": "pylint: whole project",
            "type": "shell",
            "command": "pipenv run pylint --msg-template \"{path}:{line}:{column}: {msg_id} {msg}\" ./tests/ ./src",
            // "command": "pipenv run pylint --msg-template \"{path}:{line}:{column}:{category}:{symbol} - {msg}\" ${relativeFile} ",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "python",
                "source": "pylint-whole-project",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+): ((\\w)\\d+) (.+)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "code": 4,
                    "severity": 5,
                    "message": 6
                  }
            }
        },
        {
            "label": "flake8-whole-project",
            "type": "shell",
            "command": "flake8 .",
            "presentation": {
              "echo": true,
              "reveal": "never",
              "focus": false,
              "panel": "shared",
              "showReuseMessage": false,
              "clear": true,
            //   "revealProblems": "never"
            },
            "problemMatcher": {
              "owner": "flake8",
              "source": "flake8-whole-project",
              "fileLocation": ["relative", "${workspaceFolder}"],
              "pattern": {
                "regexp": "^(.+):(\\d+):(\\d+): ((\\w)\\d+) (.+)$",
                "file": 1,
                "line": 2,
                "column": 3,
                "code": 4,
                "severity": 5,
                "message": 6
              }
            }
          }
    ]
